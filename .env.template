# Enhanced AI Trading System with ML Configuration
# Copy this file to .env and fill in your actual values

# Perplexity API Configuration (REQUIRED)
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_BASE_URL=https://api.perplexity.ai

# Optional API keys for enhanced data
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here
FRED_API_KEY=your_fred_api_key_here

# Trading Parameters
INITIAL_CAPITAL=100.0
MAX_POSITION_SIZE=0.30
STOP_LOSS_PERCENTAGE=0.15
TAKE_PROFIT_PERCENTAGE=0.25
MAX_MARKET_CAP=300000000

# Risk Management
MAX_DAILY_LOSS=0.05
MAX_POSITIONS=10
MIN_VOLUME=100000

# ML Configuration
MAX_DAILY_RECOMMENDATIONS=5
ML_RETRAIN_FREQUENCY=7
FEATURE_WINDOW=30
MIN_TRAINING_SAMPLES=50

# Database Configuration
DATABASE_URL=sqlite:///trading_system.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/trading_system.log

# Weekend Analysis Settings
WEEKEND_ANALYSIS_ENABLED=true
